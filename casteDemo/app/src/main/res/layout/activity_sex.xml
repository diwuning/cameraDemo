<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.castedemo.user.SexActivity">
    <TextView
        android:text="选择性别"
        android:layout_marginTop="120px"
        android:gravity="center"
        android:textSize="28px"
        android:textColor="@color/birthday_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_above="@+id/ll_sex"
        android:layout_marginBottom="366px"
        android:layout_marginRight="40px"
        android:layout_marginLeft="40px"
        android:background="@color/line"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <View
        android:layout_width="match_parent"
        android:background="@color/wheel_middle"
        android:layout_centerVertical="true"
        android:layout_height="122px"/>
    <LinearLayout
        android:id="@+id/ll_sex"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.itheima.wheelpicker.WheelPicker
            android:id="@+id/wheel_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:wheel_atmospheric="true"
            app:wheel_item_text_size="32px"
            app:wheel_curved="true"
            app:wheel_cyclic="false"
            app:wheel_item_space="110px"
            app:wheel_selected_item_position="0"
            app:wheel_visible_item_count="2"
            app:wheel_item_text_color="@color/btn_text"
            app:wheel_selected_item_text_color="@color/text_orange"/>
    </LinearLayout>
    <View
        android:id="@+id/view_bottom"
        android:layout_below="@+id/ll_sex"
        android:layout_marginTop="274px"
        android:layout_marginRight="40px"
        android:layout_marginLeft="40px"
        android:background="@color/line"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <LinearLayout
        android:layout_marginTop="398px"
        android:layout_below="@+id/view_bottom"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_sexCancel"
            style="@style/btn_cancel_text"
            android:background="@drawable/border_trans_style"
            android:text="取消"
            android:layout_width="132px"
            android:layout_height="64px" />
        <Button
            android:id="@+id/btn_sexSave"
            style="@style/btn_save_text"
            android:background="@drawable/border_orange_style"
            android:text="确认"
            android:layout_marginLeft="174px"
            android:layout_width="132px"
            android:layout_height="64px" />
    </LinearLayout>
</RelativeLayout>
