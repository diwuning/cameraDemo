<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.castedemo.user.NickNameActivity">
    <TextView
        android:id="@+id/tv_nick"
        android:text="填写昵称"
        android:layout_marginTop="120px"
        android:textSize="28px"
        android:textColor="@color/birthday_title"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/et_nick"
        android:textColor="@color/text_white"
        android:background="@drawable/border_trans_style"
        android:hint="请填写昵称"
        android:textColorHint="@color/btn_cancel_text"
        android:textSize="20px"
        android:paddingLeft="22px"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginTop="52px"
        android:layout_below="@+id/tv_nick"
        android:layout_width="match_parent"
        android:layout_height="80px" />
    <LinearLayout
        android:layout_marginTop="170px"
        android:layout_below="@+id/et_nick"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="64px">
        <Button
            android:id="@+id/btn_cancel"
            android:text="取消"
            style="@style/btn_cancel_text"
            android:background="@drawable/border_trans_style"
            android:layout_width="132px"
            android:layout_height="64px"  />
        <Button
            android:id="@+id/btn_save"
            android:text="确认"
            android:layout_marginLeft="174px"
            style="@style/btn_save_text"
            android:background="@drawable/border_orange_style"
            android:layout_width="132px"
            android:layout_height="64px" />
    </LinearLayout>
</RelativeLayout>
