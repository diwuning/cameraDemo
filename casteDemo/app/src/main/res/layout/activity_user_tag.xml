<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="40px"
    android:layout_marginRight="40px"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.castedemo.user.UserTagActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="128px"
        android:layout_above="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="我的偏好"
                style="@style/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="点击标签进行移除"
                android:layout_marginLeft="22px"
                android:textSize="22px"
                android:textColor="@color/btn_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <GridView
            android:id="@+id/gv_addedTag"
            android:layout_marginTop="62px"
            android:numColumns="5"
            android:listSelector="@color/trans"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:horizontalSpacing="15px"
            android:verticalSpacing="15px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </GridView>
        <View
            android:background="#33ffffff"
            android:layout_marginTop="64px"
            android:layout_marginBottom="30px"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="所有标签"
                style="@style/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="点击标签添加到&quot;我的偏好&quot;"
                android:layout_marginLeft="22px"
                android:textSize="22px"
                android:textColor="@color/btn_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <GridView
            android:id="@+id/gv_allTag"
            android:numColumns="5"
            android:listSelector="@color/trans"
            android:horizontalSpacing="15px"
            android:verticalSpacing="15px"
            android:layout_marginTop="62px"
            android:layout_marginRight="20px"
            android:layout_marginLeft="20px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </GridView>
    </LinearLayout>
    <!--<RelativeLayout-->
        <!--android:id="@+id/rl_bottom"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="60dp">-->
        <!--<ImageView-->
            <!--android:id="@+id/iv_back"-->
            <!--android:layout_centerInParent="true"-->
            <!--android:src="@drawable/btn_back"-->
            <!--android:layout_width="40dp"-->
            <!--android:layout_height="40dp" />-->
    <!--</RelativeLayout>-->
    <LinearLayout
        android:layout_marginTop="124px"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_tagCancel"
            android:background="@drawable/btn_select_orange"
            android:text="取消"
            android:textSize="24px"
            android:textColor="#66ffffff"
            android:layout_width="132px"
            android:layout_height="65px" />
        <Button
            android:id="@+id/btn_tagSave"
            android:background="@drawable/border_orange_style"
            android:textSize="24px"
            android:textColor="#000000"
            android:text="确认"
            android:layout_marginLeft="174px"
            android:layout_width="132px"
            android:layout_height="65px" />
    </LinearLayout>
</LinearLayout>
